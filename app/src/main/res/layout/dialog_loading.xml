<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<com.google.android.material.progressindicator.CircularProgressIndicator
		android:id="@+id/event_progress_indicator"
		style="@style/Widget.App.CircularProgressIndicator"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:indeterminate="true"
		android:progressBackgroundTint="@android:color/transparent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/load_dialog_text"
		android:layout_width="120dp"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:textColor="?attr/colorOnPrimary"
		app:layout_constraintEnd_toEndOf="@+id/event_progress_indicator"
		app:layout_constraintStart_toStartOf="@+id/event_progress_indicator"
		app:layout_constraintTop_toBottomOf="@+id/event_progress_indicator" />

</androidx.constraintlayout.widget.ConstraintLayout>